<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jessica.bluetoothdevicelocator.carFinder"
    android:background="#09999c">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       Direction       "
        android:id="@+id/compass"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Walking Route  "
        android:id="@+id/googleNavigate"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@+id/compass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src = "@drawable/find_car_logo"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/compass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Find My Car"
        android:textColor="#000000"
        android:textSize="55dp"
        android:theme="@style/Base.TextAppearance.AppCompat.Large"
        android:typeface="normal"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/compass"
        android:layout_alignStart="@+id/compass" />

</RelativeLayout>
